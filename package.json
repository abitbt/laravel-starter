{
    "$schema": "https://json.schemastore.org/package.json",
    "description": "Laravel 12 starter kit with Fortify auth and Bootstrap 5 Tabler UI.",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "format": "prettier --write 'resources/**/*.blade.php' 'resources/**/*.js' 'resources/**/*.css'",
        "format:check": "prettier --check 'resources/**/*.blade.php' 'resources/**/*.js' 'resources/**/*.css'",
        "format:blade": "prettier --write 'resources/**/*.blade.php'",
        "format:js": "prettier --write 'resources/**/*.js'",
        "format:css": "prettier --write 'resources/**/*.css'"
    },
    "devDependencies": {
        "@shufo/prettier-plugin-blade": "^1.16.1",
        "@tabler/core": "^1.4.0",
        "alpinejs": "^3.15.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "prettier": "^3.6.2",
        "vite": "^7.0.7"
    }
}
